<div class="local-formbuilder-builder">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <div class="form-builder-toolbar">
        <h2>{{#str}}formbuilder, local_formbuilder{{/str}}</h2>
        <div class="toolbar-actions">
            <button type="button" class="btn btn-secondary" onclick="window.history.back();">
                <i class="fa fa-arrow-left"></i> Back
            </button>
        </div>
    </div>
    
    <div class="form-builder-content">
        {{{form}}}
    </div>
</div>

<style>
.local-formbuilder-builder {
    padding: 20px;
}

.form-builder-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid #ddd;
}

#form-builder-container {
    display: flex;
    gap: 20px;
    height: 600px;
}

#field-palette {
    width: 250px;
    background: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 15px;
    overflow-y: auto;
}

#field-palette h4 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
}

.field-types {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.field-type {
    padding: 10px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 3px;
    cursor: move;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s;
}

.field-type:hover {
    background: #e9ecef;
    border-color: #007bff;
}

.field-type i {
    color: #6c757d;
    width: 16px;
}

#form-canvas {
    flex: 1;
    background: white;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 15px;
    overflow-y: auto;
}

#form-canvas h4 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
}

#form-fields {
    min-height: 400px;
    padding: 10px;
    border: 2px dashed #ddd;
    border-radius: 5px;
}

.drop-zone {
    text-align: center;
    color: #6c757d;
    font-style: italic;
    padding: 50px;
    margin-top: 100px;
}

.form-field {
    margin-bottom: 15px;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background: #f8f9fa;
    position: relative;
    cursor: pointer;
}

.form-field:hover {
    border-color: #007bff;
}

.form-field.selected {
    border-color: #007bff;
    background: #e7f3ff;
}

.field-controls {
    position: absolute;
    top: 5px;
    right: 5px;
    display: flex;
    gap: 5px;
}

.drag-handle {
    cursor: move;
    color: #6c757d;
    font-weight: bold;
}

.delete-field {
    border: none;
    background: #dc3545;
    color: white;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    font-size: 12px;
    line-height: 1;
    cursor: pointer;
}

#field-properties {
    width: 300px;
    background: #f8f9fa;
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 15px;
    overflow-y: auto;
}

#field-properties h4 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
}

#properties-content .form-group {
    margin-bottom: 15px;
}

#properties-content label {
    display: block;
    margin-bottom: 5px;
    font-weight: 500;
}

#properties-content input,
#properties-content textarea,
#properties-content select {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 3px;
}

.field-placeholder {
    height: 50px;
    background: #e9ecef;
    border: 2px dashed #6c757d;
    border-radius: 5px;
}

.dragging {
    opacity: 0.7;
}

@media (max-width: 768px) {
    #form-builder-container {
        flex-direction: column;
        height: auto;
    }
    
    #field-palette,
    #field-properties {
        width: 100%;
    }
}
</style>

<script>
require(['local_formbuilder/form_builder'], function(FormBuilder) {
    FormBuilder.init();
});
</script>
